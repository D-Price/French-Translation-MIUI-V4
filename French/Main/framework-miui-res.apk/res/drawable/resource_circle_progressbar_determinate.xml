<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:gravity="center" android:src="@drawable/resource_ringtone_play_bg" />
    </item>
    <item android:id="@*android:id/progress">
        <rotate android:useLevel="false" android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <shape android:shape="ring" android:thicknessRatio="2.0" android:useLevel="true" android:innerRadius="0.0dip"
              xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient android:startColor="@color/primary_tab_text_selected_color" android:endColor="@color/primary_tab_text_selected_color" android:useLevel="true" android:angle="270.0" android:centerColor="@color/primary_tab_text_selected_color" />
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/resource_ringtone_play_fg" />
    </item>
</layer-list>